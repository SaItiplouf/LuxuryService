{% extends 'base.html.twig' %}

{% block title %}
    Luxury Services recruitment & services
{% endblock %}

{% block stylesheets %}
    <link href="../../public/css/main.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">{{ offer.title }}</h2>
                        <span class="white-text">{{ offer.reference }}</span>
                        <ol class="breadcrumb">
                            <li>
                                <div class="portfolio-nav">
                                    <a href="#!" class="waves-effect waves-dark"><i class="fa fa-angle-left" aria-hidden="true"></i> Prev</a>
                                    <a href="#!" class="waves-effect waves-dark"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                                    <a href="#!" class="waves-effect waves-dark">Next <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
        <section class="single-project-section section-padding light-gray-bg">
            <div class="container">
                <div class="project-overview">
                    <div class="row mb-80">
                        <div class="col-xs-12 col-md-8">
                            <p class="ref grey-text no-margin">{{ offer.reference }}</p>
                            <h2>{{ offer.title }}</h2>
                           <p>{{ offer.description }}</p>
                           <br>
                           <p>{{ offer.notes }}</p>
                        </div>

                        <div class="col-xs-12 col-md-4 quick-overview">
                            <ul class="portfolio-meta">
                                <li><span> Pulished at </span>{{ offer.creatingdate.format("d M y") }}</li>
                                <li><span> Job Category </span>{{ offer.jobcategory.name }}</li>
                                <li><span> Contract Type </span>{{ offer.type }}</li>
                                <li><span> Salary </span>{{ offer.salary }} &euro;</li>
                                <li><span> Location </span>{{ offer.location }}</li>
                                <li><span> Closing date </span>{{ offer.closingdate.format("d M y") }}</li>
                            </ul>
                            {% if iscandidate is null %}
                                <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="{{ path('apply_for_offer', {id:offer.id}) }}">Apply for this job</a>
                            {% elseif iscandidate is not null %}
                                <div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
                            {% endif %}
                    </div>
                </div>

                <nav class="single-post-navigation no-margin" role="navigation">
                    <div class="row">

                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="previous-post-link">
                            {% for offer in offers %}
                                {% if offer.id == app.request.attributes.get('id') %}
                                    <!-- afficher les dÃ©tails de l'offre courante -->
                                    {% if not loop.first %}
                                        <a href="{{ path('app_show_index', {'id': offers[loop.index0 - 1 ].id}) }}" class="btn border primary waves-effect waves-dark"><i class="fa fa-long-arrow-left"></i>Previous
                                </a>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            </div>
                        </div>
                        <div class="hidden-xs hidden-sm col-md-4"></div>


                        
                        

                    </div>
                </nav>
            </div>
        </section>

    </div>

</div>
{% endblock %}

{% block script %}
<script type="text/javascript">

    onAppReady(function() {
        $('.preload').remove();
    });
</script>
{% endblock %}